
@{
    ViewBag.Title = "HomeIndex";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

<!-- ***** Main Banner Area Start ***** -->

<div class="main-banner" id="top">
    <img src="~/web/assets/images/carss.gif" id="bg-video" />
    <div class="video-overlay header-text">
        <div class="caption">
            <h6>Limited</h6>
            <h2><em>araba satış</em> sitesi!</h2>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Cars Starts ***** -->
<section class="section" id="trainers">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2> <em>Arabalar</em></h2>
                    <img src="~/web/assets/images/line-dec.png" alt="">
                    <p>Satışa çıkarılan arabalar burada gösterilmiştir. Daha fazlası için arabaların altında bulunan <em>"ARABAYI GÖRÜNTÜLE"</em> ya da en altta bulunan <em>"DAHA FAZLA ARABA GÖSTER"</em> butonuna tıklayabilirsiniz.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var c in Model.CarTake)
            {
                <div class="col-lg-4">
                    <div class="trainer-item">

                        <div class="image-thumb">
                            <img src="@c.PhotoCarURL" alt="foto" height="200px" width="%100">
                        </div>
                        <div class="down-content">
                            <span>
                                <h4 style="font-size:x-large"> @c.Brand.BrandName  @c.Model.ModelName</h4>
                            </span>

                            <h6>@c.Description.Substring(0, 10)</h6>
                            <br />
                            <p>
                                <i class="fa fa-dashboard"></i> @c.Mileage &nbsp;&nbsp;&nbsp;
                                <i class="fa fa-location-arrow"></i> @c.City.Name &nbsp;&nbsp;&nbsp;
                                <i class="fa fa-calendar"></i> @c.Year &nbsp;&nbsp;&nbsp;
                                <br />
                                <h5 style="color:orangered "><em><i class="fa fa-tag "></i>@c.Price TL</em></h5>  &nbsp;
                            </p>

                            <ul class="social-icons">
                                <li><a href="/Car/CarDetail/@c.ID" style="color:indigo">+ Arabayı görüntüle</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>

        <br>

        <div class="main-button text-center">
            <a href="/Car/CarIndex">DAHA FAZLA ARABA GÖSTER</a>
        </div>
    </div>
</section>
<!-- ***** Cars Ends ***** -->

<section class="section section-bg" id="schedule" style="background-image: url(assets/images/about-fullscreen-1-1920x700.jpg); height:500px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading dark-bg">
                    <h2> <em>Hakkımızda</em> Oku</h2>
                    <img src="~/web/assets/images/line-dec.png" alt="">
                    @foreach (var y in Model.AboutTake)
                    {
                        <div class="col-lg-12">
                            <div class="cta-content text-center">
                                <a href="/About/AboutIndex"><p>@y.Description.Substring(0, 150)...</p></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">


        </div>
    </div>
</section>



<!-- ***** Testimonials Item Start ***** -->
<section class="section" id="features">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Ziyaretçilerin <em>Görüşleri</em> </h2>
                    <img src="~/web/assets/images/line-dec.png" alt="waves">
                    <p>Yorumların üstlerine tıklayarak ilgili ilan sayfasına gidebilirsiniz.</p>
                </div>
            </div>
            @foreach (var z in Model.CommentTake)
            {
                <div class="col-lg-6">
                    <ul class="features-items">
                        <li class="feature-item">
                            <div class="left-icon">
                                <img src="~/web/assets/images/features-first-icon.png" alt="user foto">
                            </div>
                            <div class="right-content">
                                <h4>@z.UserName</h4>
                                <a href="/Car/CarDetail/@z.CarId"><p><em>@z.WriteComment</em></p></a>
                            </div>
                        </li>
                    </ul>
                </div>
            }

        </div>

        <br>

        @*<div class="main-button text-center">
                <a href="~/website/testimonials.html">Daha fazla oku</a>
            </div>*@
    </div>
</section>
<!-- ***** Testimonials Item End ***** -->
<!-- ***** Call to Action Start ***** -->
<section class="section section-bg" id="call-to-action" style="background-image: url(assets/images/banner-image-1-1920x500.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <h2>Bize <em>Mesaj</em> Gönder</h2>
                    <p>Değerli düşünce ve görüşlerinizi bizimle paylaşmak için lütfen bizimle iletişime geçiniz.</p>
                    <div class="main-button">
                        <a href="/Contact/ContactIndex">Bizimle İletişime Geç</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Call to Action End ***** -->