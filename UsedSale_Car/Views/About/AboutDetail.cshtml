@using UsedSale_Car.Models.Classes
@model List<AboutUs>
@{
    ViewBag.Title = "AboutDetail";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

@foreach (var x in Model)
{



    <!-- ***** Call to Action Start ***** -->
    <section class="section section-bg" id="call-to-action" style="background-image: url(~/website/assets/images/banner-image-1-1920x500.jpg); height:100px">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <h1 style=" text-decoration-style:dotted; color:orangered"><em>@x.Title</em></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Call to Action End ***** -->

    <section class="section" id="our-classes">
        <div class="container">
            <br>
            <br>
            <br>
            <div class="row">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@x.FotoUrl" alt="aboutfoto" height="600px">
                    </div>
                </div>
                <div class="col-lg-12">
                    <article>
                        &nbsp;&nbsp;&nbsp;<h2>@x.Title</h2>
                        <br />
                        <p style="font-size:large; color:black">@x.Description</p>
                    </article>

                </div>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="col-lg-8 offset-lg-4">
                <a href="/Home/HomeIndex" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Ana Sayfaya Dön</a>
                <a href="/About/AboutIndex" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Geri Git</a>
            </div>
    </section>

}


